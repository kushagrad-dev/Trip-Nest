<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
</script>

<div class="listing-show-page">
  <div class="row justify-content-center card-listing">
    <div class="col-lg-8 col-md-10">

      <h3 class="text-center mb-4"><%= listing.title %></h3>

      <div class="card border-0 shadow-none mb-3">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          alt="listing_image"
        >

        <div class="card-body">
          <p class="card-text">
            <strong>Owner:</strong>
            <i><%= listing.owner ? listing.owner.username : "Unknown" %></i>
          </p>

          <p class="card-text">
            <strong>Description:</strong><br>
            <%= listing.description %>
          </p>

          <p class="card-text">
            <strong>Price:</strong>
            ₹<%= listing.price !== undefined ? listing.price.toLocaleString("en-IN") : "Price not available" %>
          </p>

          <p class="card-text">
            <strong>Location:</strong>
            <%= listing.location %>
          </p>

          <p class="card-text">
            <strong>Country:</strong>
            <%= listing.country %>
          </p>
        </div>
      </div>

      <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
        <div class="d-flex justify-content-center gap-2 mb-4">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit</a>

          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button type="submit" class="btn btn-dark">Delete</button>
          </form>
        </div>
      <% } %>

      <!-- BOOKING FORM -->
      <form action="/bookings" method="POST" class="card p-3 shadow-sm mt-4">

        <h5 class="mb-3">Book This Stay</h5>

        <input type="hidden" name="booking[listingId]" value="<%= listing._id %>">

        <div class="mb-3">
          <label class="form-label">Check In</label>
          <input type="date" name="booking[checkIn]" class="form-control" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Check Out</label>
          <input type="date" name="booking[checkOut]" class="form-control" required>
        </div>

        <div class="mb-3">
          <label class="form-label">Guests</label>
          <input type="number" name="booking[guests]" class="form-control" min="1" max="20" value="1" required>
        </div>

        <input type="hidden" name="booking[totalPrice]" id="totalPriceInput">

        <h5 class="mb-3">
          Total: ₹ <span id="totalPrice">0</span>
        </h5>

        <button class="btn btn-danger w-100">Reserve</button>

      </form>

      <!-- TOTAL CALC SCRIPT -->
      <script>
      document.addEventListener("DOMContentLoaded", function () {
        const pricePerNight = Number("<%= listing.price || 0 %>");
        const checkIn = document.querySelector("[name='booking[checkIn]']");
        const checkOut = document.querySelector("[name='booking[checkOut]']");
        const totalDisplay = document.getElementById("totalPrice");
        const totalInput = document.getElementById("totalPriceInput");

        function calculateTotal() {
          if (checkIn.value && checkOut.value) {
            const start = new Date(checkIn.value);
            const end = new Date(checkOut.value);
            const nights = (end - start) / (1000 * 60 * 60 * 24);

            if (nights > 0) {
              const total = nights * pricePerNight;
              totalDisplay.innerText = total.toLocaleString("en-IN");
              totalInput.value = total;
            }
          }
        }

        checkIn.addEventListener("change", calculateTotal);
        checkOut.addEventListener("change", calculateTotal);
      });
      </script>

      <% if (currUser) { %>
        <hr>
        <h4 class="text-center">Leave a Review</h4>

        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation mt-3">
          <div class="mb-3">
            <fieldset class="starability-slot">
              <legend>Rating:</legend>
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked />
              <input type="radio" id="rate1" name="review[rating]" value="1" />
              <label for="rate1">1 star</label>
              <input type="radio" id="rate2" name="review[rating]" value="2" />
              <label for="rate2">2 stars</label>
              <input type="radio" id="rate3" name="review[rating]" value="3" />
              <label for="rate3">3 stars</label>
              <input type="radio" id="rate4" name="review[rating]" value="4" />
              <label for="rate4">4 stars</label>
              <input type="radio" id="rate5" name="review[rating]" value="5" />
              <label for="rate5">5 stars</label>
            </fieldset>
          </div>

          <div class="mb-3">
            <label class="form-label">Comment</label>
            <textarea name="review[comment]" class="form-control" rows="3" required></textarea>
            <div class="invalid-feedback">Please add a comment</div>
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-danger">Submit</button>
          </div>
        </form>
      <% } %>

      <hr>
      <% if (listing.reviews.length > 0) { %>
        <h4 class="text-center mb-3">All Reviews</h4>
        <div class="row justify-content-center review-section">
          <% for (let review of listing.reviews) { %>
            <div class="card col-md-5 col-sm-10 m-2">
              <div class="card-body">
                <h5 class="card-title"><%= review.author ? review.author.username : "Anonymous" %></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <p class="card-text"><%= review.comment %></p>
              </div>

              <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
                <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="text-center mb-3">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              <% } %>
            </div>
          <% } %>
        </div>
      <% } %>

    </div>
  </div>
</div>

<script src="/js/map.js"></script>
